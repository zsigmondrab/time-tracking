<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">
<service-builder package-path="com.liferay.timetracking">
	<author>Istvan Sajtos</author>
	<namespace>TimeTracking</namespace>

	<entity name="WorkDay" local-service="true" remote-service="true">

		<!-- PK fields -->

		<column name="workDayId" type="long" primary="true" />

		<!-- Group instance -->

		<column name="groupId" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="dayOfYearId" type="long" />
		<column name="userId" type="long" />

		<!-- Other fields -->

		<column name="startTime" type="int" />
		<column name="endTime" type="int" />
		<column name="lunchBreak" type="int" />
		<column name="timestamp" type="Date" />

	</entity>
</service-builder>