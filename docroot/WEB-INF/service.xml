<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">
<service-builder package-path="com.liferay.timetracking" auto-namespace-tables="false">
	<author>BénaBéla</author>
	<namespace>TimeTracking</namespace>
	<entity name="Task" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="taskId" primary="true" type="long"></column>
		<column name="taskName" type="String"></column>

		<!-- Order -->

		<order by="asc">
			<order-column name="taskId" />
		</order>

		<!-- Finder methods -->

		<finder name="TaskId" return-type="Collection">
			<finder-column name="taskId" />
		</finder>
	</entity>

	<entity name="TaskAssignment" local-service="true" remote-service="false">

		<!-- PK fields -->

		<column name="taskAssignmentId" primary="true" type="long"> </column>
		<column name="taskId" type="long"></column>
		<column name="workDayId" type="long"></column>
		<column name="startTime" type="Date"></column>
		<column name="endTime" type="Date"></column>

		<!-- Audit fields, portal and site scope columns, user column-->

		<column name="companyId" type="long" />
		<column name="groupId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Order -->

		<order by="asc">
			<order-column name="taskAssignmentId" />
		</order>

		<!-- Finder methods -->

		<finder name="TaskAssignmentId" return-type="Collection">
			<finder-column name="taskAssignmentId" />
		</finder>
	</entity>
</service-builder>
